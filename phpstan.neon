parameters:
    level: 1
    paths:
        - .
    excludePaths:
        - vendor
        - tests
        - docker
        - data
        - db
        - logs
        - .vscode
    ignoreErrors:
        # Ver.2.0 では段階的に改善するため一時的に無視する項目
        - '#Variable \$[a-zA-Z_]+ might not be defined#'
        - '#Function extract\(\) should not be used#'
        - '#Undefined variable: \$[a-zA-Z_]+#'
        # HTMLテンプレート内での変数使用
        - '#in template#'
        # 名前空間移行中の一時的な除外
        - '#Instantiated class phpUploader\\Config\\Config not found#'
        - '#Function initializeApp not found#'
        - '#Instantiated class phpUploader\\Models\\config not found#'
        - '#Instantiated class phpUploader\\Models\\PDO not found#'
        - '#Access to constant .+ on an unknown class phpUploader\\Models\\PDO#'
        - '#Caught class phpUploader\\Models\\PDOException not found#'
        - '#has invalid return type phpUploader\\Models\\PDO#'
        - '#Instantiated class Logger not found#'
        - '#Instantiated class ResponseHandler not found#'
        - '#Instantiated class phpUploader\\Scripts\\InvalidArgumentException not found#'
        - '#Caught class phpUploader\\Scripts\\Exception not found#'
        - '#Instantiated class config not found#'
        # 型推論の問題を一時的に無視
        - '#Variable \$.+ in isset\(\) always exists and is not nullable#'
        - '#Variable \$.+ on left side of \?\? always exists and is not nullable#'
        # 非推奨オプションの代替
        -
            identifier: missingType.iterableValue
        -
            identifier: missingType.generics
        # 組み込みクラスの名前空間付き参照に関する問題
        - '#Class \\PDO not found#'
        - '#Class \\PDOException not found#'
        - '#Class \\InvalidArgumentException not found#'
        - '#Class \\Exception not found#'
        - '#Class \\config not found#'
    reportUnmatchedIgnoredErrors: false
